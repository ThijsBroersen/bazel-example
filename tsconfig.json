{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "strict": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "es6", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@example/ui-logo": ["packages/libs/ui-logo/src/index"],
      "@example/ui-spinner": ["packages/libs/ui-spinner/src/index"],
      "@example/ui-page": ["packages/libs/ui-page/src/index"]
    }
  }
}
